<LoadPlugin "python">
    Globals true
</LoadPlugin>

<Plugin "python">
    # carbon_writer.py is at path /opt/local/collectd/python/carbon_writer.py
    ModulePath "/opt/local/collectd/python/"

    Import "carbon_writer"

    <Module "carbon_writer">
        LineReceiverHost "<%= @carbon_host %>"
        LineReceiverPort <%= @carbon_port %>
        DifferentiateCountersOverTime true
        LowercaseMetricNames true
        TypesDB "/usr/share/collectd/types.db"
        MetricPrefix "<%= @carbon_metric_prefix %>"
    </Module>
</Plugin>
